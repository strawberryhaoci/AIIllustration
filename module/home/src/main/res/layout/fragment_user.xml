        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/user_blankH"
            android:background="@drawable/bg_btn"
            android:layout_gravity="center"
            android:text="@string/login"
            android:textSize="@dimen/user_item_text"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/blankH"
            android:layout_marginTop="@dimen/user_blankH"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/text_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/register"
                android:textColor="@color/blue"
                android:textSize="@dimen/hint_text"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/text_find_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/find_pwd"
                android:textColor="@color/blue"
                android:textSize="@dimen/hint_text"
                android:gravity="center"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            >
            <TextView
                android:id="@+id/text_copyright_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_copyright"
                android:layout_marginBottom="@dimen/blankH_0"
                android:layout_marginLeft="80dp"
                android:text="@string/cr_notice"
                android:textColor="@color/grey_1"
                android:textSize="@dimen/hint_text"

                />

            <TextView
                android:id="@+id/text_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/blankH_0"
                android:text="@string/copyright"
                android:textColor="@color/grey_1"
                android:textSize="@dimen/hint_text" />
        </RelativeLayout>

